<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Runner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="NameWeightEditTextsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/_0.45</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/name_weight_edit_texts_background</item>
        <item name="android:drawablePadding">@dimen/_5dp</item>
        <item name="android:paddingStart">@dimen/_5dp</item>
        <item name="android:textCursorDrawable">@color/green</item>
    </style>

    <style name="ThemeForSplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/runner_image</item>
        <item name="postSplashScreenTheme">@style/Theme.Runner</item>
        <item name="windowSplashScreenBackground">@color/light_blue</item>
    </style>
    
</resources>